@model CopiloDemoWebApp.Models.CategoryModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<form asp-action="Edit" method="post">
    <!--Create a div with form groups for Name and Description-->
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <!--Add a submit button-->

    <div class="form-group pt-4">
        <input type="submit" value="Edit" class="btn btn-primary" />
        <!--Add link to navigate back to Category Index view-->
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary float-right">Back to Category List</a>

    </div>
    </form>


        <!--Perform client side validation-->
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
